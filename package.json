{
  "name": "minionteechs-web-amm",
  "version": "1.0.0",
  "description": "Professional Automated Market Maker (AMM) with smart contracts and fullstack UI",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:contracts\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:contracts": "forge build && forge test",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:contracts": "forge build",
    "test": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "forge test -vvv",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:coverage": "forge coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx && solc src/**/*.sol",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "forge script script/Deploy.s.sol --rpc-url $ETHEREUM_RPC_URL --private-key $PRIVATE_KEY --broadcast",
    "gas-report": "forge snapshot"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
